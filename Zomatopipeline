pipeline {
    agent any
    tools {
        nodejs 'node16'
    }
    environment {
        SCANNER_HOME=tool 'sonar'
    }

    stages {
        stage('CleanWs') {
            steps {
                cleanWs()
            }
        }
        stage("Code") {
            steps {
                git "https://github.com/NagrajM99/Zomato-Project.git"
            }
        }
        stage("Code Quality Analysis") {
            steps {
                withSonarQubeEnv('sonar') {
                    sh "$SCANNER_HOME/bin/sonar-scanner -Dsonar.projectKey=Reactapp -Dsonar.projectName='Reactapp'"
                }
            }
        }
        stage("Install Dependencies") {
            steps {
                sh "npm install"
            }
        }
        stage("D Image Build") {
            steps {
                sh 'docker build -t nagrajm99/clvt:zomatoimage1 .'
            }
        }
        stage("Image push") {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'dockerhub') {
                        sh 'docker push nagrajm99/clvt:zomatoimage1'
                    }
                }
            }
        }
        stage("Deploy") {
            steps {
                sh 'docker run -itd --name cont1 -p 1111:3000 nagrajm99/clvt:zomatoimage1'
            }
        }
    }
}
